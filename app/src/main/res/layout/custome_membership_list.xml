<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            >

            <ImageView
                android:id="@+id/image_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/membership_card_platinum"
                />
            <TextView
                android:id="@+id/title_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_card"
                android:textColor="@color/colorPrimary"
                android:textSize="25dp"
                android:text="Platinum"
                android:fontFamily="@font/rajdhani_regular"
                android:textStyle="bold"
                android:layout_marginTop="10dp"


                />
            <TextView
                android:id="@+id/fee_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_card"
                android:textColor="@color/colorGreen"
                android:textSize="22dp"
                android:text="Rs. 10,000"
                android:fontFamily="@font/rajdhani_regular"
                android:layout_marginTop="10dp"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/heading_benefits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fee_card"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:text="Benefits:"
                android:fontFamily="@font/rajdhani_regular"
                android:layout_marginTop="10dp"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/detail_benefits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/heading_benefits"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:layout_marginBottom="30dp"

                />







        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>