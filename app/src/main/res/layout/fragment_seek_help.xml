<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    >

    <TextView
        android:id="@+id/heading_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textSize="25sp"
        android:text="Seeking Help"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/heading_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:text="Feel free to Contact one of our \n Consultant we are here to help you."
        android:layout_below="@+id/heading_1"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/consultant_1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textSize="25sp"
        android:text="Maheen Ahmad"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/heading_detail"
        android:drawableTop="@mipmap/icon_feather_phone_call_blue"
        android:drawablePadding="10dp"
        />
    <TextView
        android:id="@+id/consultant_1_designation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/consultant_1_name"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:text="Consultant Clinical Psychologists"
        />
    <TextView
        android:id="@+id/consultant_1_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/consultant_1_designation"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/colorGreen"
        android:text="maheenahmed39@gmail.com"
        android:layout_marginTop="10dp"
        android:textSize="18sp"

        />
    <TextView
        android:id="@+id/consultant_1_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/consultant_1_email"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/colorGreen"
        android:text="0313548801"
        android:textSize="22dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/consultant_2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textSize="25sp"
        android:text="Sahiba Shah"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/consultant_1_phone_number"
        android:drawableTop="@mipmap/icon_feather_phone_call_blue"
        android:drawablePadding="10dp"
        />
    <TextView
        android:id="@+id/consultant_2_designation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/consultant_2_name"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="18sp"

        android:textColor="@color/colorPrimary"
        android:text="Consultant Clinical Psychologists"
        />
    <TextView
        android:id="@+id/consultant_2_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/consultant_2_designation"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/colorGreen"
        android:text="03038684866"
        android:textSize="22dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        />
</RelativeLayout>