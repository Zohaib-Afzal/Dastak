<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/heading1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                android:text="The Good Life Foundation"
                />
            <TextView
                android:id="@+id/heading1_detail1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heading1"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/heading1_detail2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heading1_detail1"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/colorGreen"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/heading2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                android:text="Our Mission"
                android:layout_below="@id/heading1_detail2"
                />
            <TextView
                android:id="@+id/heading2_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heading2"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"

                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/heading3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                android:layout_below="@id/heading2_detail"
                android:text="Our Vision"
                />
            <TextView
                android:id="@+id/heading3_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heading3"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"

                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/heading4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                android:layout_below="@id/heading3_detail"
                android:text="Our Core Values"
                />
            <TextView
                android:id="@+id/heading4_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heading4"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"

                android:layout_marginTop="30dp"
                android:textColor="@color/colorGreen"
                android:textSize="18sp"
                android:layout_marginBottom="30dp"
                />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>